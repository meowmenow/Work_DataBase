<Window x:Class="Aeroflot_from_hell.avtorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aeroflot_from_hell"
        mc:Ignorable="d"
        Title="avtorization" Height="260" Width="277" Activated="Window_Activated">
    <Grid>
        <Image Source="/autorization-aeroflot.png" Stretch="Fill"/>
        <Label Margin="22,10,24,154" RenderTransformOrigin="0.5,0.5" >
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="0.205"/>
                    <RotateTransform/>
                    <TranslateTransform Y="0.496"/>
                </TransformGroup>
            </Label.RenderTransform> Пользователь
        </Label>
        
        <TextBox x:Name="txtLogin" Margin="22,39,21,154"  />
        <Label Margin="22,95,21,71">Пароль</Label>
        <PasswordBox x:Name="txtPas" PasswordChar="*" Margin="22,122,21,71" />
        <Button Background="Transparent" Content="Войти" IsDefault="True" Click="btnEnter_Click" Margin="22,178,159,17" />
        <Button Background="Transparent" Content="Отмена" IsCancel="True" Click="btnEsc_Click" Margin="160,178,21,17" />
        

    </Grid>
</Window>
